    <LinearLayout
        android:id="@+id/ll_call"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_horizontal|bottom">

        <TextView
            android:id="@+id/tv_partner_found"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:gravity="center_horizontal|bottom"
            android:text="@string/str_partner_found"
            android:textStyle="bold"
            android:textColor="@color/main_green"
            android:textSize="25dp"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_picture_partner_found"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/img"
            app:civ_border_color="@color/main_green"
            app:civ_border_width="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="right">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_country_flag"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/iv_uz_flag"
                        app:shapeAppearanceOverlay="@style/circle"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_fullname"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:text="Jeniffer Aniston"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="right">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_level"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="6dp"
                        android:src="@color/gold"
                        app:shapeAppearanceOverlay="@style/circle"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:text="Advanced"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_accept"
                android:layout_width="110dp"
                android:layout_height="37dp"
                android:layout_marginTop="20dp"
                android:text="@string/str_accept"
                android:backgroundTint="@null"
                android:background="@drawable/button_round_full_green"
                />
            <Button
                android:id="@+id/bt_skip"
                android:layout_width="110dp"
                android:layout_height="37dp"
                android:layout_marginTop="20dp"
                android:text="@string/str_skip"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@null"
                android:background="@drawable/border_round_grey" />

        </LinearLayout>


    </LinearLayout>


