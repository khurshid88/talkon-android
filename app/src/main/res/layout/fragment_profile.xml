<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center"

        app:buttonGravity="center_vertical"
        app:titleTextColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_profile"
                android:textColor="@color/black"
                android:textSize="17sp"/>

            <ImageView
                android:id="@+id/iv_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_edit_green"
                android:background="@drawable/background_light_green_rounded"/>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/img"
                            android:scaleType="centerCrop"
                            app:shapeAppearance="@style/circle" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|bottom">

                            <ImageView
                                android:id="@+id/iv_plus"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:padding="4.5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/ic_edit"
                                android:background="@drawable/ic_background_circle_green"/>
                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:text="Tr. Dianne Russell"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="24 years"
                        android:textColor="#888888" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:gravity="top">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_settings"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginLeft="40dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/background_rounded_grey_green">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/str_settings"
                                android:textStyle="bold"
                                android:layout_marginLeft="35dp"
                                android:textSize="16sp"
                                android:textColor="@color/black"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_vector_green"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:padding="15dp"
                            android:src="@drawable/ic_help"
                            android:background="@drawable/ic_background_light_green_settings"/>


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:id="@+id/ll_balance"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginLeft="40dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/background_rounded_grey_green">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/str_balance"
                                android:textStyle="bold"
                                android:layout_marginLeft="35dp"
                                android:textSize="16sp"
                                android:textColor="@color/black"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_vector_green"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:padding="15dp"
                            android:src="@drawable/ic_balance"
                            android:background="@drawable/ic_background_light_green_settings"/>


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:id="@+id/ll_lesson_history"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginLeft="40dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/background_rounded_grey_green">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/str_lesson_history"
                                android:textStyle="bold"
                                android:layout_marginLeft="35dp"
                                android:textSize="16sp"
                                android:textColor="@color/black"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_vector_green"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:padding="15dp"
                            android:src="@drawable/ic_balance"
                            android:background="@drawable/ic_background_light_green_settings"/>


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:id="@+id/ll_vocabulary"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginLeft="40dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/background_rounded_grey_green">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/str_vocabulary"
                                android:textStyle="bold"
                                android:layout_marginLeft="35dp"
                                android:textSize="16sp"
                                android:textColor="@color/black"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_vector_green"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:padding="15dp"
                            android:src="@drawable/ic_balance"
                            android:background="@drawable/ic_background_light_green_settings"/>


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:id="@+id/ll_support_center"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginLeft="40dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/background_rounded_grey_green">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/str_support_center"
                                android:textStyle="bold"
                                android:layout_marginLeft="35dp"
                                android:textSize="16sp"
                                android:textColor="@color/black"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_vector_green"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:padding="15dp"
                            android:src="@drawable/ic_help"
                            android:background="@drawable/ic_background_light_green_settings"/>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:id="@+id/ll_privacy_policy"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginLeft="40dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/background_rounded_grey_green">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Privacy Policy"
                                android:textStyle="bold"
                                android:layout_marginLeft="35dp"
                                android:textSize="16sp"
                                android:textColor="@color/black"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/ic_vector_green"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:padding="15dp"
                            android:src="@drawable/ic_help"
                            android:background="@drawable/ic_background_light_green_settings"/>

                    </FrameLayout>

                    <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:id="@+id/ll_invite_friends"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="40dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/background_rounded_grey_green">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Invite Friends"
                            android:textStyle="bold"
                            android:layout_marginLeft="35dp"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/ic_vector_green"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:padding="15dp"
                        android:src="@drawable/ic_invite_friends"
                        android:background="@drawable/ic_background_light_green_settings"/>

                </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="50dp">

                        <LinearLayout
                            android:id="@+id/ll_logout"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginLeft="40dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/background_rounded_grey_green">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/str_log_out"
                                android:textStyle="bold"
                                android:layout_marginLeft="35dp"
                                android:textSize="16sp"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:padding="15dp"
                            android:src="@drawable/ic_logout"
                            android:background="@drawable/ic_background_logout"/>

                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>


</LinearLayout>